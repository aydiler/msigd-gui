{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MSI Monitor Control",
  "version": "1.1.1",
  "identifier": "io.github.aydiler.msigd-gui",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "MSI Monitor Control",
        "width": 480,
        "height": 680,
        "minWidth": 400,
        "minHeight": 500,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Control MSI gaming monitors",
    "longDescription": "A desktop GUI application for controlling MSI gaming monitor settings including brightness, contrast, color, LED lighting, and more. Requires the msigd CLI tool.",
    "category": "Utility",
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"]
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "wix": {
        "language": "en-US"
      }
    }
  }
}
